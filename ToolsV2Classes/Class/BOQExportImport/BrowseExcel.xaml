<Window x:Class="ToolsV2Classes.Class.BOQExportImport.BrowseExcel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToolsV2Classes.Class.BOQExportImport"
             mc:Ignorable="d" 
             Title="Browse Excel File" ResizeMode="CanResizeWithGrip" 
             Width="600" Height="200" 
             WindowStartupLocation="CenterScreen" >
    <Grid Margin="20,20,20,20">
        <StackPanel Orientation="Horizontal">

            <TextBox HorizontalAlignment="Left" Height="40" Margin="10,40,0,0" TextWrapping="Wrap"   
                 Text="Select BOQ with Price Data" VerticalAlignment="Top" Width="400" Name="FileNameTextBox" TextChanged="FileNameTextBox_TextChanged"/>
            <Button x:Name="BrowseButton" Content="Browse a file" HorizontalAlignment="Left"   
                Margin="10,40,0,0" VerticalAlignment="Top" Width="120" Click="BrowseButton_Click"   
                RenderTransformOrigin="1,0.8" Height="40"/>
        </StackPanel>

    </Grid>
</Window>
