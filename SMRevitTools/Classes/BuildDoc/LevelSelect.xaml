<Window x:Class="SMRevitTools.Classes.BuildDoc.LevelSelect"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SMRevitTools.Classes.BuildDoc"
             mc:Ignorable="d" 
             d:Height="auto" d:DesignWidth="400" ResizeMode="CanResizeWithGrip"
             SizeToContent="WidthAndHeight" Title="Build Document">


    <Border Padding="15">

        <StackPanel Width="350">


            <Separator/>
            <Label Content="Select the required Levels : " FontSize="12" Margin="0 0 0 5"
                   HorizontalAlignment="Left"/>
            <!-- To Input the Casework Name -->




            <!-- To Input the Floor number -->
            <Grid>
                <ListBox Name="LevelListbox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300"
                         d:ItemsSource="{Binding Floor_Name}"
                         SelectionChanged="LevelListbox_SelectionChanged">

                    <!--<ListBox.ItemContainerStyle>
                        <Style TargetType="{x:Type ListBoxItem}">
                            <Setter Property="IsSelected" Value="{Binding Check_Status}"/>
                        </Style>
                    </ListBox.ItemContainerStyle>-->


                    <ListBox.ItemContainerStyle>
                        <Style TargetType="{x:Type ListBoxItem}">
                            <Setter Property="Focusable" Value="False"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <!-- Each item in list is a CheckBox -->
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding Floor_Name}" IsChecked="{Binding Check_Status}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                </ListBox>


    

            </Grid>



            <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                <!-- Pack B and Cancel Buttons -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Content="Cancel" Width="100" Background="#7FF58575" Grid.Column="0" Click="CancelTask"/>

                    <Button Content="Build Document"  Grid.Column="1" Click="BuildDocumentClick" Grid.ColumnSpan="2" Margin="25,0,-100,0" Background="#7F7B955B" />

                </Grid>
            </StackPanel>
            <Separator/>
        </StackPanel>

    </Border>

</Window>
